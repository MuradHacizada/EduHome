@model List<UserVM>

<!--/ Striped Rows -->

<hr class="my-5" />

<!-- Bordered Table -->
<div class="card">
    <div class="card-header" style="display:flex;justify-content:space-between">
        <div>
            <h2>Users</h2>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-primary text-white rounded-pill" style="margin-right:13px">Create</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Surname</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th style="text-align:right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (UserVM item in Model)
                    {
                        <tr>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name</strong>
                            </td>
                            <td>@item.Surname</td>
                            <td>@item.Username</td>
                            <td>@item.Email</td>
                            <td>@item.Role</td>
                            <td>
                                @if (item.IsDeactive)
                                {

                                    <span style="padding:6px 8px; background-color:red ;color:white;border-radius:7px">Deactive</span>
                                }
                                else
                                {
                                    <span style="padding:6px 8px; background-color:green ;color:white;border-radius:7px">Active</span>
                                }
                            </td>

                            <td>
                                <div style="display:flex;justify-content:flex-end">
                                    <a class="btn btn-warning text-white rounded-pill" style="margin-right:13px" asp-action="ResetPassword" asp-route-id="@item.Id">ResetPassword</a>
                                    <a class="btn btn-info text-white rounded-pill" style="margin-right:13px" asp-action="Update" asp-route-id="@item.Id">Update</a>
                                    @if (item.IsDeactive)
                                    {
                                        <a class="btn btn-success text-white rounded-pill" style="margin-right:13px;width:118px" asp-action="Activity" asp-route-id="@item.Id">Active</a>
                                    }
                                    else
                                    {
                                        <a class="btn btn-danger text-white rounded-pill" style="margin-right:13px;width:118px" asp-action="Activity" asp-route-id="@item.Id">DeActive</a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!--/ Bordered Table -->

<hr class="my-5" />